{
    "name": "volunteers/crm",
    "description": "API for Volunteers CRM",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@dragon-code.pro",
            "homepage": "https://github.com/andrey-helldar"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/TheDragonCode"
        },
        {
            "type": "open_collective",
            "url": "https://opencollective.com/dragon-code"
        },
        {
            "type": "boosty",
            "url": "https://boosty.to/dragon-code"
        },
        {
            "type": "yoomoney",
            "url": "https://yoomoney.ru/to/410012608840929"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "defstudio/telegraph": "^1.21",
        "dragon-code/simple-dto": "^2.6",
        "dragon-code/web-core": "^0.1.2",
        "laravel/socialite": "^5.5",
        "socialiteproviders/manager": "^4.2",
        "socialiteproviders/telegram": "^4.1"
    },
    "require-dev": {
        "dragon-code/env-sync-laravel": "^2.3",
        "dragon-code/pretty-routes": "^3.2",
        "fakerphp/faker": "^1.20",
        "laravel/sail": "^1.14",
        "laravel/telescope": "^4.9",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^6.2",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ignition": "^1.2"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Database\\Factories\\": "database/factories",
            "Database\\Seeders\\": "database/seeders"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/*": true,
            "symfony/*": true,
            "dragon-code/codestyler": true,
            "ergebnis/composer-normalize": true,
            "friendsofphp/php-cs-fixer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-update-cmd": [
            "php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "php artisan vendor:publish --tag=telescope-assets --ansi --force",
            "php artisan lang:update --ansi",
            "php artisan env:sync --with-env --ansi",
            "php artisan optimize:clear --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "php artisan package:discover --ansi"
        ]
    }
}
